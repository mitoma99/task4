<table class='table'>
<p><% book.book_comments.each do |book_comment| %>
  <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
  <%= book_comment.user.name %>
  </p>
  <p><%= book_comment.comment %></p>
  <% if book_comment.user == current_user %>
  <p><%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment),method: :delete, remote: true, class: "btn btn-sm btn-danger" %></p>
  <% end %>
<% end %>
 </table>